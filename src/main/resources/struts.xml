<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<constant name="struts.devMode" value="true" />
    <!--<constant name="struts.convention.classes.reload" value="true" />-->
	<constant name="struts.action.excludePattern" value="/admin/images/.*,/admin/js/.*,/admin/css/.*,/admin/img/.*" />
    <constant name="struts.convention.result.path" value="/"/>
    <constant name="struts.action.extension" value=""/>
    <constant name="struts.mapper.alwaysSelectFullNamespace" value="false"/>
    <constant name="struts.patternMatcher" value="regex"/>

    <package name="admin" namespace="/admin" extends="struts-default">
		<result-types>
			<result-type name="tiles"
				class="org.apache.struts2.views.tiles.TilesResult" />
		</result-types>
		<action name="login">
			<result>login.jsp</result>
		</action>
		<action name="doLogin" class="edu.aptech.vn.action.LoginAction"
			method="execute">
			<result name="success" type="tiles">/index.tiles</result>
			<result name="error">login.jsp</result>
		</action>
		<action name="doLogout" class="edu.aptech.vn.action.LoginAction"
			method="logOut">
			<result name="success">login.jsp</result>
		</action>
		<action name="feedback/index" class="edu.aptech.vn.action.admin.FeedbackAdminAction" method="execute">
			<result name="success" type="tiles">/feedback.tiles</result>
		</action>
	</package>

    <package name="default" extends="struts-default">
        <action name="index" method="execute">
            <result name="success">index.jsp</result>
            <result name="error">error.jsp</result>
        </action>
    </package>

</struts>