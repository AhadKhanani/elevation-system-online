<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<constant name="struts.devMode" value="true" />

	<package name="admin" namespace="/admin" extends="struts-default">
		<result-types>
			<result-type name="tiles"
				class="org.apache.struts2.views.tiles.TilesResult" />
		</result-types>
		<action name="index">
			<result>index.jsp</result>
		</action>
		<action name="login">
			<result>login.jsp</result>
		</action>
		<action name="doLogin" class="edu.aptech.vn.action.LoginAction"
			method="execute">
			<result name="success" type="tiles">/index.tiles</result>
			<result name="error">login.jsp</result>
		</action>
		<action name="doLogout" class="edu.aptech.vn.action.LoginAction"
			method="logOut">
			<result name="success">login.jsp</result>
		</action>
	</package>

	<package name="feedback" namespace="/feedback" extends="struts-default">

		<action name="addFeedback" method="execute"
			class="edu.aptech.vn.action.FeedbackAction">
			<result name="success" type="redirect">
				listFeedbacks
         </result>
		</action>

		<action name="listFeedbacks" method="listFeedbacks"
			class="edu.aptech.vn.action.FeedbackAction">
			<result name="success">/pages/feedback.jsp</result>
		</action>

	</package>

</struts>